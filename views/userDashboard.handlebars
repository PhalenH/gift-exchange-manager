<!-- Add gift modal -->
<div
  class="modal fade"
  id="giftModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Add gift details</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form class="add-gift-form">
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Gift Name</label>
            <input
              type="text"
              class="form-control"
              id="add-gift-name"
              aria-describedby="emailHelp"
              placeholder="Required"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Gift Price</label>
            <input
              type="number"
              class="form-control"
              id="add-gift-price"
              placeholder="Optional"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Gift Link</label>
            <input
              type="text"
              class="form-control"
              id="add-gift-link"
              placeholder="Optional"
            />
          </div>
          <button
            id="add-gift-button"
            type="submit"
            class="btn btn-primary"
          >Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Edit gift modal -->
<div
  class="modal fade"
  id="editGiftModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit gift details</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="edit-gift-form" data-gift-id="">
          <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Gift Name</label>
            <input
              type="text"
              class="form-control"
              id="edit-gift-name"
              aria-describedby="emailHelp"
              placeholder="Required"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Gift Price</label>
            <input
              type="number"
              class="form-control"
              id="edit-gift-price"
              placeholder="Optional"
            />
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Gift Link</label>
            <input
              type="text"
              class="form-control"
              id="edit-gift-link"
              placeholder="Optional"
            />
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>

      </div>
    </div>
  </div>
</div>

<script src="./js/userDashboard.js"></script>