<button type="button" class="btn btn-success">Group Dashboard</button>
<button id="logout" type="button" class="btn btn-primary btn-md">Log Out</button>
<h1>Welcome!</h1>

<div class="user-dashboard-container">
  <div class="wishlist-container">
    <div class="wishlist-card card">
      <!-- <span class="border border-success"> -->
      {{! <div class="card-header"> }}
      <div class="wishlist-header">
        <h2 class="cursive">
          Your Wishlist
        </h2>
        <img
          class="icon-button"
          data-bs-toggle="modal"
          data-bs-target="#giftModal"
          src="assets/plus-icon.png"
        />
      </div>
      {{! </div> }}
      <div class="card-body">

        <!-- Icon button triggers modal -->

        <div class="card-body">
          <ul class="gifts">
            {{#each gifts as |gift|}}
              <div class="gift-item" data-gift-id="{{gift.id}}">
                <li class="gift">{{gift.gift_name}}</li>
                <div class="gift-button-container">
                  <!-- Icon button triggers modal -->
                  <img
                    class="gift-item-icon icon-button"
                    id="edit-button"
                    data-bs-toggle="modal"
                    data-bs-target="#editGiftModal"
                    src="/assets/edit-icon.png"
                  />
                  <img
                    class="gift-item-icon delete-button icon-button"
                    id="delete-button"
                    src="/assets/delete-icon.png"
                  />
                </div>
              </div>
            {{/each}}
          </ul>

        </div>
      </div>
    </div>
  </div>

  <div class="group-list-container col-6 col-sm-12">
    <div class="card text-center">
      <div class="card-header">
        Your Groups
      </div>
      <div class="card-body">

        <div class="group-buttons">
          <a href="/create-group" class="btn btn-primary">Create a Group</a>
          <a href="/join-group" class="btn btn-primary">Join a Group</a>
        </div>

        <div class="card-body">
          <ul class="group-list">
            {{#each groups as |group|}}
              <li class="group-item"><a
                  href="/group/{{group.id}}"
                >{{group.event_name}}</a></li>
            {{/each}}
          </ul>
        </div>

      </div>
    </div>
  </div>
</div>

